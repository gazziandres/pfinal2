
<div class="container">
  <% if @orders.count > 0 %>
    <table class="table">
      <thead>
        <tr>
          <th>Plato</th>
          <th>Valor</th>
          <th>Cantidad</th>
          <th>Subtotal</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
          <tr>
            <td> <%= order.plato.name %> </td>
            <td> <%= order.plato.price %> </td>
            <td> <%= order.quantity %> </td>
            <td> <%= order.price * order.quantity %> </td>
          </tr>
        <% end %>
        <tr class="table-dark">
          <td></td>
          <td></td>
          <td><strong>Total de la Compra:</strong></td>
          <td><strong><%= @total %></strong></td>
        </tr>
      </tbody>
    </table>

    <%= link_to 'Limpiar carro', clean_orders_path, class: 'btn btn-outline-danger' %>
    <%= link_to 'Confirmar Pedido', pre_pay_billings_path, class: 'btn btn-success float-right' %>

    <% else %>
      <p>No tienes pedidos en tu carro de compra</p>
    <% end %>

</div>
